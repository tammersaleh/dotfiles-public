[include]
  path = ~/.gitconfig-private
[include]
  path = ~/.gitconfig-local
[user]
	name = Tammer Saleh
  email = tammer@superorbit.al
[color]
  status = auto
  diff = auto
  branch = auto
  ui = true
[alias]
  aliases         = !bash -c 'git config --get-regexp "alias.*" | cut -c 7-'

  ql              = log --abbrev-commit --decorate --pretty=format:'%Cred%cn%Creset: %Cred%h%Creset %s %Cblue%ar%Creset' --graph

  a               = add -A

  current-branch  = rev-parse --abbrev-ref HEAD
  conflicts       = !git st | grep unmerged: | cut -c 15-
  modified        = ls-files -m
  last            = log @{1}.. --decorate --reverse --stat -C --no-merges
  files-in-commit = diff-tree --no-commit-id --name-only -r
  bl              = blame -wMC

  co              = checkout

  ci              = commit -v
  append          = commit --amend --no-edit
  fixup           = commit --fixup

  br              = branch -av
  my-branches     = "br --list '*tsaleh*'"
  latest-branches = for-each-ref --sort=-committerdate refs/heads --format='%(committerdate:short) %(refname:short)'
  push-branch     = !bash -c 'git push --set-upstream origin "$(git current-branch)"'
  delete-branch   = !bash -c 'git branch -d $0 && git push origin --delete $0'
  # track-branch    = !bash -c 'git fetch origin && git branch --set-upstream $0 origin/$0 && git checkout $0'
  publish-branch  = push -u origin
  update          = "!git fetch upstream && git rebase \"upstream/$(git current-branch)\""

  nuke            = !git clean -df && git reset --hard
  suir            = submodule update --init --recursive --jobs=4

  # https://landongrindheim.com/2018/12/13/semantic-git-aliases.html
  uncommit = reset --soft HEAD^
  unstage  = reset
  staged   = diff --name-only --cached
  modified = diff --name-only

[merge]
  tool = opendiff
  summary = true
[diff]
  wordRegex = [^[:space:]]
  submodule = log
[core]
  excludesfile = ~/.gitglobalignore
  whitespace = trailing-space,space-before-tab,tab-in-indent
  pager = diff-so-fancy | less --tabs=4 -RFX
	preloadindex = true
[pager]
  # diff = diff-so-fancy | less --tabs=4 -RFX --pattern '^(Date|added|deleted|modified): '
[status]
  relativePaths = false
  submodulesummary = 1
[apply]
  whitespace = nowarn
[rerere]
  enabled = 1
[gh]
  autoUpdate = always
[filter "lfs"]
  required = true
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  clean = git-lfs clean -- %f
[hub]
  protocol = https
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[color "diff"]
  meta = yellow
  frag = magenta bold
  commit = yellow bold
  old = red bold
  new = green bold
  whitespace = red reverse
[rebase]
	autosquash = true
[gc]
	auto = 256
[pull]
	rebase = true

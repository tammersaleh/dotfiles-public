#!/usr/bin/env bash

set -euo pipefail
shopt -s inherit_errexit

main() {
  [[ $# -eq 1 ]] || usage "Expected BRANCH name"
  
  git switch master
  git branch -d "$0" || true
  git push origin --delete "$0" || true
  git remote prune origin
}

usage() {
  [[ $# -gt 0 ]] && echo "ERROR: $*"
  local me=$(basename "$0")
  cat <<-EOF

  USAGE: $me BRANCH

  Delete BRANCH locally and on the remote.

  Examples:

    $me tsaleh/my-branch
	EOF
  exit 1
}

main "$@"


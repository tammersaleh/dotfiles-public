#!/usr/bin/env bash

set -euo pipefail
shopt -s inherit_errexit

main() {
  [[ $# -eq 3 ]] || usage "Expected three arguments, got $#"
  
}

usage() {
  [[ $# -gt 0 ]] && echo "ERROR: $*"
  local me=$(basename "$0")
  cat <<-EOF

  USAGE: $me ARGUMENT

  Explanation

  Examples:

    $me foo
	EOF
  exit 1
}

main "$@"

